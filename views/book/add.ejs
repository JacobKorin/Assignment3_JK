<%- include ../partials/header.ejs %>
<div class = "bodySection">
    <%- include ../partials/nav_bar.ejs %>

    <div class="container">
        <div class="row">
            <div class="offset-md-3 col-md-6">
                <h1><%= title %></h1>

                <!-- Creating a form for the user to fill out in order to create a new db entry -->
                <form class="form" method="POST">
                    <div class="form-group">
                        <label for="nameTextField">Workout Title</label>
                        <input type="text" class="form-control"
                        id="nameTextField"
                        placeholder="Enter the Workout Title"
                        name="Name" required>
                    </div>

                    <div class="form-group">
                        <label for="dateTextField">Date Of Workout</label>
                        <input type="text" class="form-control"
                        id="dateTextField"
                        placeholder="Enter the Date of the Workout"
                        name="Date" required>
                    </div>

                    <div class="form-group">
                        <label for="lengthTextField">Length</label>
                        <input type="text" class="form-control"
                        id="lengthTextField"
                        placeholder="Enter the Length of the workout in Minutes"
                        name="Length" required>
                    </div>

                    <div class="form-group">
                        <label for="exercisesTextArea">Exercises</label>
                        <textarea type="text" class="form-control"
                        id="exercisesTextArea"
                        placeholder="Enter the Exercises You Completed"
                        name="Exercises" required></textarea>
                    </div>

                    <!-- Submit button-->
                    <button class="btn btn-primary" type="submit">
                        <i class="fas fa-edit"></i> Submit</button>
                    
                    <!-- Creating a link on the buttons -->
                        <a href="/workoutslist" class="btn btn-warning">
                            <i class="fas fa-undo"></i> Cancel</a>

                </form>
            </div>

        </div>
    </div>
    <%- include ../partials/footer.ejs %>
</div>